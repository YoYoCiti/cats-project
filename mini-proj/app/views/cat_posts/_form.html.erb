<script>
    $(document).ready(function(){
        $("#cat_post_cat_id").select2();
    });
</script>

<h2><%= yield(:title) %></h2>

<%= form_for(@cat_post) do |f| %>
    <%= render "shared/error_messages", object: f.object %>

    <div><%= f.hidden_field :user_id, value: current_user.id %></div>

    <div class="form-group text-left">
        <label>For</label><br>
        <%= f.collection_select(:cat_id, Cat.all, :id, :name, prompt: "Choose a cat") %>
    </div>

    <div class="form-group text-left">
        <%= f.label :content %><br/>
        <%= f.text_area :content, autofocus: true, autocomplete: "content", class: "form-control" %>
    </div>

    <div class="form-group text-left">
        <%= f.label :images %>
        <%= f.file_field :images, multiple: true %>
    </div>

    <div class="actions">
        <%= f.submit yield(:button_text), class: "btn" %>
    </div>


<% end %>