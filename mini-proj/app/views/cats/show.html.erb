<%= provide(:title, @cat.name) %>

<div class="row justify-content-center" style="padding: 15px">
    <div class="col-sm-6">
        <div class="card" style="border-radius: 15px">
            <div class="card-body">
                <h5 class="card-title"><%= @cat.name %></h5>
                <div class="row">
                    <div class="col-sm-3">
                        <p><%= fa_icon gender_icon(@cat.gender) %> <%= @cat.gender.humanize %></p>
                    </div>
                    <div class="col-sm-5">
                        <p><%= fa_icon "birthday-cake" %> <%= @cat.birthday %></p>
                    </div>
                </div>
                <p class="card-text"><%= @cat.description %></p>
                <%= link_to "#{@cat.name}'s Feed", '#', class: "btn", style: "background-color: #EF9273; color: white;" %>        
            </div>
        </div>
    </div>
</div>