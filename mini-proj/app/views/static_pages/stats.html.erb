<%= provide(:title, "Statistics") %>

<div class="container">
    <div class="row">
        <div class="card col text-center" style="border-radius: 15px; margin-right: 15px; margin-top:15px;">
            <h2 class="card-title" style="margin-top:15px;">Cat's Subscription Proportion</h2>
            <div id="pie-chart" style="width: 500px; height:400px;"></div>
        </div>
        <div class="card col text-center" style="border-radius: 15px; margin-right: 15px; margin-top:15px;">
            <h2 class="card-title" style="margin-top:15px;">User's Subscription Proportion</h2>
            <div id="bar-graph" style="width: 500px; height: 400px;"></div>
        </div>
    </div>
</div>

<script>
    var myPieChart = echarts.init(document.getElementById('pie-chart'));
    var myBarGraph = echarts.init(document.getElementById('bar-graph'));

    var pieChartOption = {
        series: [
            {
                type: 'pie',
                data: [
                    {
                        value: <%= @subscribed_cat_count %>,
                        name: 'Subscribed'
                    },
                    {
                        value: <%= @unsubscribed_cat_count %>,
                        name: 'Unsubscribed'
                    }
                ]
            }
        ]
    };

    barGraphOption = {
        xAxis: {
            data: ['Subscribed', 'Unsubscribed']
        },
        yAxis: {},
        series: [
            {
                type: 'bar',
                data: [<%= @subscribed_user_count %>, <%= @unsubscribed_user_count %>]
            }
        ]
    };

    myPieChart.setOption(pieChartOption);
    myBarGraph.setOption(barGraphOption);
</script>