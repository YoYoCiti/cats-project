<%= provide(:title, @user.name) %>

<div class="row" style="padding: 15px">
    <div class="col-sm-4">
        <div class="card text-center" style="border-radius: 15px">
            <%= image_tag(@user.avatar, class: "card-img-top") %>
            <div class="card-body">
                <h5 class="card-title"><%= @user.name %></h5>
                <%= link_to "My Family", '#', class: "btn", style: "background-color: #EF9273; color: white;" %>        
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <%= render "devise/registrations/edit" %> 
    </div>
</div>